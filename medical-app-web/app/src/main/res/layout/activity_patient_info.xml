<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientInfoActivity">

    <RadioGroup
        android:id="@+id/sex_input"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/age_header"
        app:layout_constraintEnd_toEndOf="@+id/age_header"
        app:layout_constraintStart_toStartOf="@+id/age_header"
        app:layout_constraintTop_toBottomOf="@+id/sex_option_header">

        <RadioButton
            android:id="@+id/Male_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/male_option" />

        <RadioButton
            android:id="@+id/Female_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/female_option" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/temperature_input"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/pressure_header"
        app:layout_constraintEnd_toEndOf="@+id/temperature_header"
        app:layout_constraintStart_toStartOf="@+id/temperature_header"
        app:layout_constraintTop_toBottomOf="@+id/temperature_header">

        <RadioButton
            android:id="@+id/fever_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/fever_option" />

        <RadioButton
            android:id="@+id/normT_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/normT_option" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/pressure_input"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/pregnancy_header"
        app:layout_constraintEnd_toEndOf="@+id/pressure_header"
        app:layout_constraintStart_toStartOf="@+id/pressure_header"
        app:layout_constraintTop_toBottomOf="@+id/pressure_header">

        <RadioButton
            android:id="@+id/high_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/high_option" />

        <RadioButton
            android:id="@+id/normP_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/normP_option" />

        <RadioButton
            android:id="@+id/low_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/low_option" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/pregnancy_input"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/pregnancy_header"
        app:layout_constraintEnd_toEndOf="@+id/pregnancy_header"
        app:layout_constraintStart_toStartOf="@+id/pregnancy_header"
        app:layout_constraintTop_toBottomOf="@+id/docpat_location2">

        <RadioButton
            android:id="@+id/yes_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/pregnancy_option" />

        <RadioButton
            android:id="@+id/no_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/nonpregnancy_option" />

    </RadioGroup>

    <TextView
        android:id="@+id/height_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/height_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/height_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_input" />

    <TextView
        android:id="@+id/age_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/age_field_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/age_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_input" />

    <TextView
        android:id="@+id/weight_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/weight_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/weight_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_input" />

    <EditText
        android:id="@+id/weight_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/temperature_header"
        app:layout_constraintEnd_toEndOf="@+id/weight_header"
        app:layout_constraintStart_toStartOf="@+id/weight_header"
        app:layout_constraintTop_toBottomOf="@+id/weight_header" />

    <EditText
        android:id="@+id/height_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/weight_header"
        app:layout_constraintEnd_toEndOf="@+id/weight_header"
        app:layout_constraintStart_toStartOf="@+id/weight_header"
        app:layout_constraintTop_toBottomOf="@+id/height_header" />

    <EditText
        android:id="@+id/age_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="5"
        app:layout_constraintBottom_toTopOf="@+id/height_header"
        app:layout_constraintEnd_toEndOf="@+id/height_header"
        app:layout_constraintStart_toStartOf="@+id/height_header"
        app:layout_constraintTop_toBottomOf="@+id/age_header" />

    <CheckBox
        android:id="@+id/docpat_location2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/docpat_location"
        app:layout_constraintBottom_toTopOf="@+id/next_step_button"
        app:layout_constraintEnd_toEndOf="@+id/next_step_button"
        app:layout_constraintStart_toStartOf="@+id/next_step_button"
        app:layout_constraintTop_toBottomOf="@+id/pressure_input" />

    <Button
        android:id="@+id/next_step_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/next_button"
        android:text="@string/next_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/docpat_location2" />

    <TextView
        android:id="@+id/pid_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/health_id_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/pid_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sex_option_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/sex_option_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/sex_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pname_input" />

    <EditText
        android:id="@+id/pid_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textCapCharacters"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/pname_header"
        app:layout_constraintEnd_toEndOf="@+id/sex_option_header"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/sex_option_header"
        app:layout_constraintTop_toBottomOf="@+id/pid_header" />

    <TextView
        android:id="@+id/pname_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/name_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/pname_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pid_input" />

    <EditText
        android:id="@+id/pname_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/sex_option_header"
        app:layout_constraintEnd_toEndOf="@+id/sex_option_header"
        app:layout_constraintStart_toStartOf="@+id/sex_option_header"
        app:layout_constraintTop_toBottomOf="@+id/pname_header" />

    <TextView
        android:id="@+id/temperature_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/temperature_option_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/temperature_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_input" />

    <TextView
        android:id="@+id/pressure_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/pressure_option_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/pressure_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature_input" />

    <TextView
        android:id="@+id/pregnancy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/pressure_option_header"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/pregnancy_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pressure_input" />



</androidx.constraintlayout.widget.ConstraintLayout>